{
  "compilerOptions": {
    "outDir": "./build",
    "module": "es6",
    "moduleResolution": "node",
    "target": "es2015",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": false,
    "declaration": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2016"],
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "@types"],
    "paths": {
      "@toptal/picasso/*": ["packages/core/src/*"],
      "@toptal/picasso": ["packages/core/src/index"],
      "@toptal/picasso-lab/*": ["packages/lab/src/*"],
      "@toptal/picasso-lab": ["packages/lab/src/index"],
      "*": ["@types/*"]
    }
  },
  "include": ["packages/core/src/**/*"],
  "exclude": [
    "**/test.jsx",
    "**/test.tsx",
    "**/story/index.jsx"
  ]
}
