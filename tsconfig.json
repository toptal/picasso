{
  "compilerOptions": {
    "outDir": "dist-package",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "es2015",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2019"],
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "@types"],
    "paths": {
      "*": ["@types/*"],
      "@topkit/analytics-charts": ["packages/topkit-analytics-charts/src"],
      "@topkit/analytics-charts/*": ["packages/topkit-analytics-charts/src/*"],
      "@toptal/picasso": ["packages/picasso/src"],
      "@toptal/picasso-charts": ["packages/picasso-charts/src"],
      "@toptal/picasso-charts/*": ["packages/picasso-charts/src/*"],
      "@toptal/picasso-forms": ["packages/picasso-forms/src"],
      "@toptal/picasso-forms/*": ["packages/picasso-forms/src/*"],
      "@toptal/picasso-pictograms": ["packages/picasso-pictograms/src"],
      "@toptal/picasso-pictograms/*": ["packages/picasso-pictograms/src/*"],
      "@toptal/picasso-provider": ["packages/picasso-provider/src"],
      "@toptal/picasso-provider/*": ["packages/picasso-provider/src/*"],
      "@toptal/picasso-query-builder": ["packages/picasso-query-builder/src"],
      "@toptal/picasso-query-builder/*": [
        "packages/picasso-query-builder/src/*"
      ],
      "@toptal/picasso-rich-text-editor": [
        "packages/picasso-rich-text-editor/src"
      ],
      "@toptal/picasso-rich-text-editor/*": [
        "packages/picasso-rich-text-editor/src/*"
      ],
      "@toptal/picasso-shared": ["packages/shared/src"],
      "@toptal/picasso-shared/*": ["packages/shared/src/*"],
      "@toptal/picasso/*": ["packages/picasso/src/*"],
      "~/*": ["./*"]
    },
    "types": ["node", "jest", "@testing-library/jest-dom"]
  },
  "include": ["packages/*/src"],
  "exclude": ["packages/*/dist-package", "**/__testfixtures__"]
}
