{
  "compilerOptions": {
    "outDir": "./build",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "es2015",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": false,
    "declaration": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2016"],
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "@types"],
    "paths": {
      "@toptal/picasso/*": ["packages/picasso/src/*"],
      "@toptal/picasso": ["packages/picasso/src/index"],
      "@toptal/picasso-lab/*": ["packages/picasso-lab/src/*"],
      "@toptal/picasso-lab": ["packages/picasso-lab/src/index"],
      "@toptal/picasso-forms/*": ["packages/picasso-forms/src/*"],
      "@toptal/picasso-forms": ["packages/picasso-forms/src/index"],
      "@toptal/picasso-charts/*": ["packages/picasso-charts/src/*"],
      "@toptal/picasso-charts": ["packages/picasso-charts/src/index"],
      "*": ["@types/*"]
    }
  },
  "include": [
    "packages/picasso/src/**/*",
    // FIXME: this is temporary solution until
    // https://github.com/testing-library/jest-dom/issues/123 is fixed
    "./node_modules/@testing-library/jest-dom/extend-expect.d.ts"
  ],
  "exclude": ["**/test.jsx", "**/test.tsx", "**/story/index.jsx"]
}
