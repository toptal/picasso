{
  "compilerOptions": {
    "outDir": "./build",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "es2015",
    "downlevelIteration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": false,
    "declaration": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2016"],
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "@types"],
    "paths": {
      "@topkit/analytics-charts/*": ["packages/topkit-analytics-charts/src/*"],
      "@topkit/analytics-charts": [
        "packages/topkit-analytics-charts/src/index"
      ],
      "*": ["@types/*"]
    }
  },
  "include": [
    // FIXME: this is temporary solution until
    // https://github.com/testing-library/jest-dom/issues/123 is fixed
    "./node_modules/@testing-library/jest-dom/extend-expect.d.ts"
  ],
  "exclude": ["**/test.jsx", "**/test.tsx", "**/story/index.jsx"]
}
