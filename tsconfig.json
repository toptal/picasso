{
  "compilerOptions": {
    "outDir": "./build",
    "module": "commonjs",
    "moduleResolution": "node",

    "target": "es2015",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": false,
    "declaration": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2016"],
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "@types"],
    "paths": {
      "@components/*": ["components/*"],
      "@components": ["components/index.js"],
      "@local-types/*": ["@types/*"],
      "*": ["@types/*"]
    }
  },
  "include": ["components/**/*"],
  "exclude": [
    "**/test.jsx",
    "**/test.tsx",
    "**/visual.test.jsx",
    "**/visual.test.tsx",
    "**/story/index.jsx"
  ]
}
