#!/usr/bin/env node

const path = require('path')
const yargs = require('yargs').argv
const { log, setVersionPackageJson } = require('./utils')

const packageJson = require(path.resolve(yargs.packageJson))
const nextVersion = packageJson.version
const packageDir = path.resolve('.')

log('')
log(`Bumping package.json version inside build folder of the package: ${packageDir}`)
log(`Next version: ${nextVersion}`)

setVersionPackageJson(packageDir, nextVersion)
log('')
