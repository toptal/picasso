#!/usr/bin/env node
const path = require('path')
const yargs = require('yargs').argv
const packageRootDir = path.resolve('.')

// script arguments
const shouldCopyReadme = yargs.copyReadme
const entry = yargs.entry

const {
  copyPackageJson,
  copyReadme,
  bumpReadmeVersion
} = require('./utils')

copyPackageJson(packageRootDir, entry)

if (shouldCopyReadme) {
  copyReadme(packageRootDir)
  bumpReadmeVersion(packageRootDir)
}
