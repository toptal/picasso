{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "lib": ["dom", "es2016", "es2017"],
    "allowJs": true,
    "declaration": false,
    "target": "es5",
    "module": "esNext",
    "paths": {
      "~/*": ["*"],
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@components": ["src/components/index"],
      "*": ["@types/*"]
    }
  },
  "exclude": []
}
