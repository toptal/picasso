{
  "extends": "./node_modules/@toptal/davinci-syntax/src/configs/.eslintrc",
  "overrides": [	
    {	
      "files": ["*.example.jsx"],	
      "rules": {	
        "react/no-multi-comp": "off",	
        "react/require-optimization": "off",	
        "import/no-named-default": "off",	
