{
  "extends": "./node_modules/@toptal/davinci-syntax/src/configs/.eslintrc",
  "overrides": [
    {
      "files": [
        "*.example.jsx",
        "*.example.tsx"
      ],
      "rules": {
        "react/no-multi-comp": 0,
        "react/require-optimization": 0,
        "import/no-named-default": 0,
        "no-console": 0
      }
    },
    // codemod fixtures
    {
      "files": [
        "packages/picasso-codemod/src/**"
      ],
      "rules": {
        "id-length": [
          "error",
          {
            "exceptions": [
              "e",
              "_",
              "j"
            ]
          }
        ],
        "react/jsx-props-no-spreading": "off"
      }
    },
    // Generated files
    {
      "files": [
        "packages/picasso/src/Icon/index.ts"
      ],
      "rules": {
        "max-lines": 0
      }
    },
    // don't allow picasso external imports inside picasso
    {
      "files": [
        "packages/picasso/src/**"
      ],
      "excludedFiles": [
        "*.example.jsx",
        "*.example.tsx"
      ],
      "rules": {
        "no-restricted-imports": [
          "error",
          "@toptal/picasso"
        ]
      }
    },
    // don't allow picasso-lab external imports inside picasso-lab
    {
      "files": [
        "packages/picasso-lab/src/**"
      ],
      "excludedFiles": [
        "*.example.jsx",
        "*.example.tsx"
      ],
      "rules": {
        "no-restricted-imports": [
          "error",
          "@toptal/picasso-lab"
        ]
      }
    },
    // don't allow picasso-forms external imports inside picasso-forms
    {
      "files": [
        "packages/picasso-forms/src/**"
      ],
      "excludedFiles": [
        "*.example.jsx",
        "*.example.tsx"
      ],
      "rules": {
        "no-restricted-imports": [
          "error",
          "@toptal/picasso-forms"
        ]
      }
    },
    // don't allow picasso-charts external imports inside picasso-charts
    {
      "files": [
        "packages/picasso-charts/src/**"
      ],
      "excludedFiles": [
        "*.example.jsx",
        "*.example.tsx"
      ],
      "rules": {
        "no-restricted-imports": [
          "error",
          "@toptal/picasso-charts"
        ]
      }
    },
    {
      "files": [
        "**/test.tsx"
      ],
      "rules": {
        "max-lines": 0
      }
    }
  ]
}
