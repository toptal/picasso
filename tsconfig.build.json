{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist-package",
    "paths": {
      "*": ["@types/*"],
      "~/*": ["./*"],
      "@toptal/picasso/*": ["node_modules/@toptal/picasso/src/*"],
      "@toptal/picasso-provider/*": ["node_modules/@toptal/picasso-provider/src/*"],
      "@toptal/*": ["node_modules/@toptal/*/src"]
    }
  },
  "exclude": [
    "**/*.example.jsx",
    "**/*.example.tsx",
    "**/test.jsx",
    "**/test.tsx",
    "**/test.ts",
    "**/*.spec.js",
    "**/*.spec.ts",
    "**/story/index.jsx",
    "**/story/index.tsx"
  ]
}
