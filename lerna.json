{
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "version": "independent",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md"
      ],
      "conventionalCommits": true,
      "exact": true,
      "createRelease": "github",
      "yes": true,
      "message": "chore(release): publish [skip ci]"
    }
  }
}
