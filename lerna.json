{
  "packages": ["packages/*", "packages/base/*"],
  "npmClient": "yarn",
  "version": "independent",
  "loglevel": "silly",
  "command": {
    "publish": {
      "ignoreChanges": ["*.md"],
      "createRelease": "github",
      "yes": true,
      "message": "chore(release): publish [skip ci]"
    }
  },
  "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}
