    "jest-puppeteer": "^4.4.0",
    "jsdom": "^15.1.1",
    "lerna": "^3.19.0",
    "puppeteer": "1.19.0",
    "raw-loader": "^4.0.1",
    "react": "^16.14.0",
    "react-ace": "^9.1.1",
