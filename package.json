{
  "name": "@toptal/picasso-root",
  "version": "0.0.1",
  "description": "",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:package": "lerna run build:package --stream --parallel",
    "build:storybook": "build-storybook -c .storybook -o build/storybook --quiet",
    "commit": "git-cz",
    "generate:component": "davinci code new component",
    "generate:example": "davinci code new example",
    "generate:icons": "./bin/generate-icons",
    "happo": "cross-env TEST_ENV=visual happo run",
    "happo:ci": "cross-env TEST_ENV=visual HAPPO_IS_ASYNC=false happo-ci-github-actions",
    "lint": "davinci syntax lint code .",
    "release": "yarn build:package && changeset publish",
    "start": "start-storybook -p 9001 -c .storybook",
    "syncpack": "yarn syncpack:list & yarn syncpack:fix",
    "syncpack:list": "syncpack list-mismatches",
    "syncpack:fix": "syncpack fix-mismatches",
    "symlink": "cross-env ./bin/symlink --link",
    "symlink:off": "cross-env ./bin/symlink --unlink",
    "test": "yarn test:unit && yarn test:integration",
    "test:integration": "yarn build:package && yarn test:setup cypress run-ct",
    "test:integration:ci": "yarn happo-e2e -- -- yarn cypress run-ct",
    "test:integration:open": "yarn build:package && yarn test:setup cypress open-ct",
    "test:setup": "cross-env TZ=UTC NODE_ENV=test",
    "test:unit": "yarn test:setup jest",
    "test:unit:debug": "yarn test:setup cross-env NODE_OPTIONS=--inspect-brk jest",
    "test:unit:ci": "yarn test:unit --maxWorkers=4 --ci",
    "test:unit:watch": "yarn test:unit --watch",
    "test:visual": "./bin/run-in-docker ./bin/test-visual",
    "test:visual:ci": "./bin/test-visual --ci",
    "typecheck": "tsc --noEmit & tsc -p ./cypress/tsconfig.json",
    "prepublish": "if [ -f 'yarn.lock' ]; then yarn-deduplicate yarn.lock; fi",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:toptal/picasso.git"
  },
  "author": "Toptal",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/toptal/picasso/issues"
  },
  "homepage": "https://github.com/toptal/picasso#readme",
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@babel/standalone": "^7.17.9",
    "@changesets/changelog-github": "^0.4.3",
    "@changesets/cli": "^2.22.0",
    "@cypress/react": "^5.12.4",
    "@cypress/skip-test": "^2.6.1",
    "@cypress/webpack-dev-server": "^1.8.4",
    "@cypress/webpack-preprocessor": "^5.11.1",
    "@storybook/addon-a11y": "^6.4.21",
    "@storybook/addon-viewport": "^6.4.21",
    "@storybook/react": "^6.4.21",
    "@storybook/theming": "^6.4.21",
    "@svgr/cli": "^6.2.1",
    "@testing-library/jest-dom": "^5.16.4",
    "@toptal/browserslist-config": "^1.2.0",
    "@toptal/davinci": "^14.0.0",
    "@types/debounce": "^1.2.0",
    "@types/esprima": "^4.0.2",
    "@types/happo-cypress": "^1.17.2",
    "@types/jest": "^27.4.1",
    "@types/jest-image-snapshot": "^3.1.0",
    "@types/puppeteer": "^1.19.0",
    "@types/react-truncate": "^2.3.4",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "brace": "^0.11.1",
    "cache-loader": "^4.1.0",
    "chalk": "^4.1.0",
    "commitizen": "^4.2.4",
    "copy-to-clipboard": "^3.3.1",
    "core-js": "^3.6.5",
    "cross-env": "^7.0.3",
    "cypress": "^9.5.4",
    "cypress-plugin-tab": "^1.0.5",
    "cypress-real-events": "^1.7.0",
    "cz-conventional-changelog": "3.2.0",
    "date-fns": "^2.9.0",
    "debounce": "^1.2.1",
    "ejs": "^3.1.7",
    "escodegen": "^2.0.0",
    "esprima": "^4.0.1",
    "esprima-walk": "^0.1.0",
    "fs-extra": "^8.0.1",
    "glob": "^7.1.4",
    "happo-cypress": "^3.0.1",
    "happo-e2e": "^1.0.3",
    "happo-plugin-storybook": "^2.10.3",
