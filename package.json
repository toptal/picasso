  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "davinci syntax lint code",
      "prettier-standard"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "resolutions": {
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.12",
    "**/marksy/marked": "^0.6.0",
    "**/npx/npm": "^5.7.1"
  },
  "dependencies": {
    "@storybook/react": "^6.0.27"
  }
