{
  "name": "@toptal/picasso",
  "version": "0.1.0-alpha.0",
  "description": "",
  "main": "build/index.js",
  "module": "build/es/index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test-visual": "yarn storybook:build && jest --config='./puppeteer/puppeteer.jest.config.js'",
    "test-visual:watch": "jest --config='./puppeteer/puppeteer.jest.config.js' --watchAll",
    "lint:path": "eslint --ext=.js,.jsx --color --fix",
    "lint": "yarn run lint:path .",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "storybook:build": "build-storybook -c .storybook -o build/storybook",
    "version:alpha": "yarn version --new-version prerelease",
    "build:es2015": "cross-env NODE_ENV=production ./bin/build --config es2015",
    "build:es6": "cross-env NODE_ENV=production BABEL_ENV=es ./bin/build --config es",
    "build:watch": "cross-env BABEL_ENV=es ./bin/build --config dev --watch",
    "build": "yarn build:es2015 && yarn build:es6",
    "symlink": "cross-env BABEL_ENV=es ./bin/build --config dev --symlink",
    "publish": "yarn lint && yarn test && yarn test-visual && yarn build && yarn version:alpha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toptal/ui-library.git"
  },
  "author": "Toptal",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/toptal/ui-library/issues"
  },
  "homepage": "https://github.com/toptal/ui-library#readme",
  "dependencies": {
    "@material-ui/core": "^3.6.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.1.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/plugin-transform-object-assign": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@storybook/react": "^4.0.9",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "chalk": "^2.4.1",
    "cross-env": "^5.2.0",
    "eslint": "^5.9.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-jsx": "^6.0.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "^4.0.0",
    "fs-extra": "^7.0.1",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "prettier-standard": "^8.0.1",
    "react-testing-library": "^5.3.1",
    "regenerator-runtime": "^0.13.1",
    "rimraf": "^2.6.2",
    "yargs": "^12.0.5",
    "puppeteer": "^1.11.0",
    "jest-image-snapshot": "^2.7.0",
    "jest-puppeteer": "^3.6.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "npm run lint:path",
      "prettier-standard",
      "git add"
    ]
  }
}
