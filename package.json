    "react-test-renderer": "^18.2.0",
    "remark-gfm": "^3.0.1",
    "syncpack": "^9.8.4",
    "thread-loader": "^4.0.2",
    "ts-loader": "^9.4.2",
    "typescript": "~4.7.0",
    "url-loader": "^4.1.1",
    "yargs": "^17.5.1",
    "yarn-deduplicate": "^3.1.0"
  },
  "lint-staged": {
    "{**/*.{js,jsx,ts,tsx},.changeset/*.md}": [
      "davinci-syntax lint code",
      "prettier --write"
    ]
  },
  "resolutions": {
    "lodash": "^4.17.21",
    "**/marksy/marked": "^0.6.0",
    "**/find-babel-config/json5": "1",
    "@storybook/react": "^6.5.15",
    "webpack": "^5.0.0",
