    "copy-to-clipboard": "^3.3.1",
    "core-js": "^3.6.5",
    "cross-env": "^6.0.3",
    "cypress": "^5.4.0",
    "cz-conventional-changelog": "3.2.0",
    "date-fns": "^2.9.0",
    "debounce": "^1.2.0",
    "ejs": "^3.1.3",
    "escodegen": "^1.12.0",
    "esprima": "^4.0.1",
