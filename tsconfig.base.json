{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist-package",
    "module": "ES2020",
    "moduleResolution": "node",
    "target": "es2015",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declarationMap": true,
    "declaration": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "lib": ["dom", "es2019"],
    "typeRoots": ["./node_modules/@types", "./@types"],
    "strict": true
  },
  "include": ["src"],
  "exclude": [
    "**/test.tsx",
    "**/*.test.tsx",
    "**/__testfixtures__",
    "**/test.ts",
    "**/*.test.ts",
    "**/story"
  ]
}
