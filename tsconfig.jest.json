  "include": ["**/test.tsx", "**/*.test.tsx", "**/test.ts", "**/*.test.ts"],
  "exclude": ["packages/picasso-*", "packages/topkit-*", "cypress"],
  "references": [{ "path": "./tsconfig.pkgsrc.json" }]
}
